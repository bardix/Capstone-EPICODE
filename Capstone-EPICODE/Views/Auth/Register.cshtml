@model Capstone_EPICODE.Models.UserViewModel

@{
    ViewData["Title"] = "Register";
}
<!-- Sfondo personalizzato -->
<style>


    body {
        background-image: url("/img/parcheggiosfondo.jpg");
        background-size: cover;
    }

    .register-card {
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }


    .btn-primary {
        background-color: #0d6efd; /* Colore del bottone di login */
        border: none;
    }

        .btn-primary:hover {
            background-color: #0a58ca; /* Colore del bottone al passaggio del mouse */
        }

    .form-control {
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid #ddd;
    }

    .text-center img {
        max-width: 150px;
        margin-bottom: 20px;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <div class="register-card card shadow-sm">
                <div class="card-body">
                <!-- Logo GeParking -->
                <div class="text-center">
                    <img src="/img/GeParking.jpg" alt="GeParking Logo">
                </div>
                <!-- Titolo -->
                <h1 class="text-center mb-4">Registrati</h1>
                
                <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo Nome -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Campo Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo Password -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Pulsante di invio -->
            <div class="form-group text-center">
                <input type="submit" value="Registrati" class="btn btn-primary" />
            </div>
        </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index">Back to List</a>
                    </div>
        </div>
    </div>
</div>
</div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
