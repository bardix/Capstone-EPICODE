@model IEnumerable<Capstone_EPICODE.Models.Role>

@{
    ViewData["Title"] = "AllRoles";
}

<h1>AllRoles</h1>

<p>
    <a asp-action="CreateRole">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="EditRole" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-danger" asp-action="DeleteConfirmedRole" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
