@model IEnumerable<Capstone_EPICODE.Models.User>

@{
    ViewData["Title"] = "AllUsers";
}

<h1>Utenti Registrati</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("EditRole", "EditUser", new {  id=item.Id }) |
                @Html.ActionLink("Details", "DetailUser", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
